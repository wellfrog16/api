{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "jquery": true,
        "amd": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module",
        "allowImportExportEverywhere": true
    },
    "rules": {
        "no-console": "off",
        "comma-spacing": [2, {"before": false, "after": true}],
        "indent": [2, 4],
        "linebreak-style": [2, "windows"],
        "quotes": [2, "single"],
        "semi": [2, "always"],
        "no-extra-semi": 2,
        "space-before-function-paren": [2, "never"]
    }
}