{
    "env": {
        "browser": true
    },
    "extends": "standard",
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module",
        "allowImportExportEverywhere": true
    },
    "rules": {
        "no-console": [0],
        "comma-spacing": [2, {"before": false, "after": true}],
        "indent": [2, 4],
        "linebreak-style": [2, "windows"],
        "quotes": [2, "single"],
        "semi": [2, "always"],
        "no-extra-semi": 2,
        "space-before-function-paren": [2, "never"],
        "no-path-concat": [0],
        "require-await": [2],
        "eol-last": [0],
        "no-extend-native": [0]
    },
    "globals": {
        "__dirname": false
    }
}